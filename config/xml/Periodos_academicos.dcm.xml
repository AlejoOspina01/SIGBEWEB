<!-- config/xml/Roles.dcm.xml -->
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
  https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

  <entity name="Periodos_academicos" table="periodosacademicos">
    <id name="consecutivo_periodo" type="integer">
      <generator strategy="AUTO" />
    </id>
    <field name="descripcion" type="string"/>
    <field name="fecha_incio" type="datetime" />
    <field name="fecha_fin" type="datetime" />
    <field name="estadoperiodo" type="boolean" />
  </entity>
</doctrine-mapping>